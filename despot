#!/usr/bin/env bash

mkdir -p pkg/src
PKG_LIST=$(ls pkg/src | tr " " "\n")

OPTION="$1"
if [ -z "$OPTION" ]; then
	OPTION="--help"
fi

case "$OPTION" in
	"--version" | "-v")
		echo "despot 0.01.2"
		;;
	"--help" | "-h")
		echo "./despot [arg]"
		echo ""
		echo "arguments:"
		echo "--build [PKG]  | -r [PKG]: compile a package. defaults to all if no package name is given"
		echo "--help         | -h:       show this screen"
		echo "--list         | -l:       list all directories in pkg/src"
		echo "--remove [PKG] | -r [PKG]: remove given package"       
		echo "--update       | -u:       update pkg/repo, git pull all pkg/src directories"
		echo "--version      | -v:       display current version of despot"
		echo ""
		;;
	"--list" | "-l")
		echo "$PKG_LIST"
		;;
	"--remove" | "-r")
		if [ ! -z "$2" ]; then
                        if [ ! -z "$3" ]; then
                               echo "ERROR: only one package updatable at a time"
                               exit
                        fi
                        if [ ! -f pkg/repo/"$2".bash ]; then
                                echo "ERROR: draumaz has yet to write a build script for $2"
                                exit
                        else
                                bash pkg/repo/"$2".bash uninstall
				echo "uninstalled."
                        fi
                        exit
                fi
		;;
	"--update" | "-u")
		echo -n "updating despot repo..."
		git pull > /dev/null 2>&1
		echo " done"
		echo
		for l in $PKG_LIST; do
			echo "checking: $l"
			cd pkg/src/"$l"
			git pull
			echo
			cd ../../..
		done
		;;
	"--build" | "-b")
		if [ ! -z "$2" ]; then
			if [ ! -z "$3" ]; then
				echo "ERROR: only one package updatable at a time"
				exit
			fi
			if [ ! -f pkg/repo/"$2".bash ]; then
				echo "ERROR: no build script for $2 available"
				exit
			else if [ ! -f pkg/src/"$2" ]; then
                		echo "ERROR: no sources for $2 in pkg/src/"
                		exit
            		else
				bash pkg/repo/"$2".bash build
				echo "installed."
			fi fi
			exit
		fi
		for l in $PKG_LIST; do
			if [ ! -f pkg/repo/"$l".bash ]; then
                                echo "ERROR: no build script for $l available"
                                continue
                        fi
			bash pkg/repo/"${l}".bash build
		done
		;;
	*)
		echo "ERROR: unrecognized command"
		;;
esac
